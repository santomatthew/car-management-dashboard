<%- include('template/header') -%>

<div class="row">
    <div class="col-lg-12" style="margin-top: 20px;">
        <p><b>Cars > List Car ></b> Update Car Information</p>
    </div>
</div>
<div class="row">
    <div class="col-lg-12" style="margin-top: 20px;">
        <p style="font-size: 20px;"><b>Update Car Information</b></p>
    </div>
</div>

<div class="row">
    <form action="" method="post">
        <div class="row">
            <div class="col-lg-12" style="margin-left: 10px;background-color:white ">
                <div class="row" style="margin-top: 10px;">
                    <div class="col-lg-2" style="margin-top: 10px;">
                        <p>Nama*</p>
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" placeholder="Avanza" aria-label="default input example">
                    </div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-lg-2" style="margin-top: 10px;">
                        <p>Sewa Per Hari*</p>
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" placeholder="Rp 0,-" aria-label="default input example">
                    </div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-lg-2" style="margin-top: 10px;">
                        <p>Ukuran*</p>
                    </div>
                    <div class="col-lg-4">
                        <select class="form-select input-form" id="size" name="size">
                            <option value="small">Small</option>
                            <option value="medium">Medium</option>
                            <option value="large">Large</option>
                        </select>
                    </div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-lg-2" style="margin-top: 10px;">
                        <p>Foto*</p>
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="file" placeholder="https://placeimg.com/640/480/any"
                            aria-label="default input example">
                    </div>
                </div>

            </div>
        </div>
        <div class="row" style="margin-top: 50px;">
            <div class="col-lg-2">
                <a href="/" class="btn btn-outline-primary">Cancel</a>
                <button type="submit" class="btn " style="background-color:#0D28A6;color: white;">Save</button>
            </div>
        </div>
    </form>
</div>
</div>
<%- include('template/footer') -%>